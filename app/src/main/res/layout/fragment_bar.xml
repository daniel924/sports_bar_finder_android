<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sportsbarfinder.FindBarActivity$BarFragment"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="4"
    >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:freezesText="true"
        android:id="@+id/bar_result"
        android:textSize="25dp"
        android:textColor="@color/bar_color"
        android:layout_column="0"
        android:layout_row="0"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:freezesText="true"
        android:id="@+id/teams_result"
        android:layout_column="0"
        android:layout_row="1"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:freezesText="true"
        android:id="@+id/city_result"
        android:layout_column="0"
        android:layout_row="2"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:freezesText="true"
        android:id="@+id/address_result"
        android:layout_column="0"
        android:layout_row="3"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:freezesText="true"
        android:id="@+id/map_result"
        android:text="Map"
        android:layout_rowSpan="4"
        android:layout_column="1"
        android:layout_gravity="center"
        android:onClick="clickMapButton"
        />

</GridLayout>